# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Documentation
*.md text diff=markdown
*.rst text diff=rst
*.txt text

# Configuration files
*.ini text
*.cfg text
*.conf text
*.toml text
*.yml text
*.yaml text
*.json text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives (binary)
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary

# Executables (binary)
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Data files
*.csv text
*.tsv text
*.xml text
*.html text
*.css text
*.js text

# Logs
*.log text

# Temporary files
*.tmp text
*.temp text
*.bak text
*.swp text
*.swo text

# OS generated files
.DS_Store binary
Thumbs.db binary
desktop.ini text

# Git files
.gitattributes text
.gitignore text
.gitmodules text
